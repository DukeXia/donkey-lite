<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
    PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
    "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!--suppress MybatisGenerateCustomPluginInspection -->
<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">

        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="useMapperCommentGenerator" value="true"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.donkeycode.boot.utils.BaseMapper"/>
            <property name="caseSensitive" value="true"/>
            <property name="forceAnnotation" value="true"/>
            <property name="generateColumnConsts" value="true"/>
            <property name="beginningDelimiter" value="`"/>
            <property name="endingDelimiter" value="`"/>
            <property name="lombok" value="Getter,Setter,ToString,Accessors"/>
        </plugin>

        <!--通用代码生成器插件-->
        <!--mapper接口-->
        <plugin type="tk.mybatis.mapper.generator.TemplateFilePlugin">
            <property name="targetProject" value="D:/Users/Documents/donkey-lite/donkey-lite-generator/src/test/java"/>
            <property name="targetPackage" value="test.mappers"/>
            <property name="templatePath" value="generator/mapper.ftl"/>
            <property name="mapperSuffix" value="Mapper"/>
            <property name="fileName" value="${tableClass.shortClassName}${mapperSuffix}.java"/>
        </plugin>

        <!--mapper.xml-->
        <plugin type="tk.mybatis.mapper.generator.TemplateFilePlugin">
            <property name="targetProject" value="D:/Users/Documents/donkey-lite/donkey-lite-generator/src/test/java"/>
            <property name="targetPackage" value="test.mappers"/>
            <property name="mapperPackage" value="test.mappers"/>
            <property name="templatePath" value="generator/mapperXml.ftl"/>
            <property name="mapperSuffix" value="Mapper"/>
            <property name="fileName" value="${tableClass.shortClassName}${mapperSuffix}.xml"/>
        </plugin>


        <!--service-->
        <plugin type="org.mybatis.generator.plugins.ServiceTemplatePlugin">
            <property name="targetProject" value="D:/Users/Documents/donkey-lite/donkey-lite-generator/src/test/java"/>
            <property name="targetPackage" value="test.service.imp"/>
            <property name="BasePackageName" value="test.service.imp"/>
            <!-- <property name="mapperPackage" value="test.mappers"/> -->
            <property name="serviceTemplatePath" value="generator/service.ftl"/>
            <property name="interfaceTemplatePath" value="generator/interface.ftl"/>
            <property name="mapperSuffix" value="ServiceImp"/>
            <property name="fileName" value="${tableClass.shortClassName}${mapperSuffix}.java"/>
        </plugin>

        <!--测试输出单个文件，每个表都会生成一个对应的文件-->
        <plugin type="tk.mybatis.mapper.generator.TemplateFilePlugin">
            <property name="targetProject" value="D:/Users/Documents/donkey-lite/donkey-lite-generator/src/test/java"/>
            <property name="targetPackage" value="test.one"/>
            <property name="templatePath" value="generator/test-one.ftl"/>
            <property name="fileName" value="${tableClass.shortClassName}Test.txt"/>
            <!--默认值是下面这个，可以不配置-->
            <property name="templateFormatter" value="tk.mybatis.mapper.generator.formatter.FreemarkerTemplateFormatter"/>
        </plugin>


        <!--测试输出整个文件，所有表都可用，一次只生成一个文件，用于聚合所有表使用-->
        <plugin type="tk.mybatis.mapper.generator.TemplateFilePlugin">
            <property name="singleMode" value="false"/>
            <property name="targetProject" value="D:/Users/Documents/donkey-lite/donkey-lite-generator/src/test/java"/>
            <property name="targetPackage" value="test.all"/>
            <property name="templatePath" value="generator/test-all.ftl"/>
            <property name="fileName" value="All.txt"/>
        </plugin>

        <jdbcConnection driverClass="org.hsqldb.jdbcDriver"
                        connectionURL="jdbc:hsqldb:mem:generator"
                        userId="sa"
                        password="">
        </jdbcConnection>

        <!--MyBatis 生成器只需要生成 Model-->
        <javaModelGenerator targetPackage="test.model" targetProject="D:/Users/Documents/donkey-lite/donkey-lite-generator/src/test/java"/>

        <table tableName="user_info">
            <generatedKey column="id" sqlStatement="JDBC"/>
        </table>
        <table tableName="country">
            <generatedKey column="id" sqlStatement="JDBC"/>
        </table>
    </context>
</generatorConfiguration>